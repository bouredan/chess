<?xml version="1.0" encoding="UTF-8"?>


<?import cz.cvut.fel.bouredan.chess.gui.game.BoardView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane fx:id="rootBorderPane" xmlns:fx="http://javafx.com/fxml" prefHeight="1000.0" prefWidth="1000.0"
            fx:controller="cz.cvut.fel.bouredan.chess.gui.ApplicationController" stylesheets="@board.css">
    <top>
        <HBox>
            <Label>Chess</Label>
            <Button fx:id="startButton" onAction="#startNewGame">Start game</Button>
            <Button fx:id="loadGameButton" onAction="#loadGame">Load game</Button>
        </HBox>
    </top>
    <center>
        <BoardView fx:id="boardView"/>
    </center>
    <bottom>
        <HBox>
            <Button onAction="#displayPreviousBoard">&lt;</Button>
            <Button onAction="#displayNextBoard">&gt;</Button>
        </HBox>
    </bottom>
</BorderPane>